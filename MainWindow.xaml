<Window x:Class="Replacr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Replacr"
        mc:Ignorable="d"
        Title="Replacr" Height="330" Width="300">
    <StackPanel>
        <TextBlock Margin="10" FontSize="21" FontWeight="DemiBold">Replacr</TextBlock>
        <TextBlock Margin="10 4">String to Replace</TextBlock>
        <TextBox x:Name="stringToReplace" Margin="10 0" />
        <TextBlock Margin="10 4">Replace Value</TextBlock>
        <TextBox x:Name="replaceValue" Margin="10 0" />
        <TextBlock Margin="10 4">Original String</TextBlock>
        <TextBox x:Name="originalString" Margin="10 0" />
        <TextBlock Margin="10 4">Result</TextBlock>
        <TextBox x:Name="result" Margin="10 0" />
        <Button x:Name="replaceBtn" Margin="10 30" Click="ReplaceBtn_Click">Replace</Button>
    </StackPanel>
</Window>
